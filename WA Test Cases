#include<stdio.h>
int main(){
    int t;
    scanf("%d",&t);
    for(int k=0;k<t;k++){
        int min=1000;;
        int n;
        scanf("%d",&n);
        int a[n];
        for(int i=0;i<n;i++){
            scanf("%d",&a[i]);
        }
        char s[n];
        scanf("%s",s);
        for(int i=0;i<n;i++){
            if(s[i]=='0'){
                if(a[i]<min){
                    min = a[i];
                }
            }
        }
        printf("%d\n",min);
    }
}
